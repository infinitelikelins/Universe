<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/theme_background">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/view_s"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintWidth_percent="0.35"
        app:srcCompat="@mipmap/view_s" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/view_a"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:gravity="center"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view_b"
        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintWidth_percent="0.24"
        app:srcCompat="@mipmap/view_a" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/view_b"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:gravity="center"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view_c"
        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/view_a"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintWidth_percent="0.24"
        app:srcCompat="@mipmap/view_b" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/view_c"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:gravity="center"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view_d"
        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/view_b"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintWidth_percent="0.24"
        app:srcCompat="@mipmap/view_c" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/view_d"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:gravity="center"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/view_c"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintWidth_percent="0.24"
        app:srcCompat="@mipmap/view_d" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:onClick="onBackClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/btn_back" />

</androidx.constraintlayout.widget.ConstraintLayout>