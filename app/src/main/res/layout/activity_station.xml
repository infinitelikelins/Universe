<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/station_bg">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:onClick="onBackClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/btn_back" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/station_pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/station_pink_selector"
        app:layout_constraintBottom_toBottomOf="@+id/station_yellow"
        app:layout_constraintEnd_toStartOf="@+id/station_green"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/station_yellow"
        app:layout_constraintTop_toTopOf="@+id/station_yellow" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/station_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/station_green_selector"
        app:layout_constraintBottom_toBottomOf="@+id/station_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/station_pink"
        app:layout_constraintTop_toTopOf="@+id/station_yellow" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/station_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/station_purple_selector"
        app:layout_constraintBottom_toTopOf="@+id/perform"
        app:layout_constraintEnd_toEndOf="@+id/station_yellow"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/station_yellow"
        app:layout_constraintTop_toBottomOf="@+id/station_yellow"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/station_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/station_red_selector"
        app:layout_constraintBottom_toBottomOf="@+id/station_purple"
        app:layout_constraintEnd_toEndOf="@+id/station_pink"
        app:layout_constraintStart_toStartOf="@+id/station_pink" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/station_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/station_yellow_selector"
        app:layout_constraintBottom_toTopOf="@+id/station_purple"
        app:layout_constraintEnd_toStartOf="@+id/station_pink"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/station_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/station_blue_selector"
        app:layout_constraintBottom_toBottomOf="@+id/station_purple"
        app:layout_constraintEnd_toEndOf="@+id/station_green"
        app:layout_constraintStart_toStartOf="@+id/station_green" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/perform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/btn_command"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/station_red" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/clear_config"
        android:textColor="#FFFFFF"
        app:drawableTopCompat="@mipmap/btn_station_clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>